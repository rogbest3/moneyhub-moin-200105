	<select id="selectAll" resultType="FAQ" parameterType="PageProxy">
		select A.* 
		from (  SELECT * 
				FROM FAQ
				ORDER BY 1 DESC ) A
		LIMIT ${startRow}, ${pageSize}
	</select>
	
	<select id="countFAQ" resultType="String">
		select count(*)
		from FAQ
	</select>
	
	<select id="createFAQ" parameterType="map">
		${CREATE_FAQ}
	</select>
	
	<select id="deleteFAQ" parameterType="map">
		${DROP_FAQ}
	</select>
